<h1><%= t('view.show') %></h1>
  <table  class="new_table">

    <tr><th><%= t('view.title') %></th>
      <td><%= @task.title %></td></tr>
    <tr><th><%= t('view.content') %></th>
      <td><%= @task.content %></td></tr>
    <tr><th><%= t('view.created_at') %></th>
      <td><%= @task.created_at.strftime("%Y-%m-%d") %></td></tr>
    <tr><th><%= t('view.expired_at') %></th>
      <td><%= @task.expired_at.strftime("%Y-%m-%d") %></td></tr>
      <% if @labels.present? %>
      <tr>
        <th><%= :label %></th>
          <% @labels.each do |label| %>
              <td class="btn btn-secondary"><%= label.tag %></td>
          <% end %>
      </tr>
        <% end %>
  </table>
  <%= link_to t('view.back'), :back %>
