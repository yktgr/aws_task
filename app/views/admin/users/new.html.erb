<h1>ユーザー登録</h1>
<% if @user.errors.any? %>
<div id = "error_explanation">
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</div>
<% end %>


<%= form_with(model:@user,local:true,url:admin_users_path) do |f| %>
<table class="new_table">
  <tr class="col-mid-3">
  <th><%= f.label User.human_attribute_name(:name) %></th>
  <td><%= f.text_field :name %></td>
  </tr>
  <tr class="col-mid-3">
  <th><%= f.label User.human_attribute_name(:email) %></th>
  <td><%= f.email_field :email %></td>
  </tr>
  <tr class="col-mid-3">
  <th><%= f.label User.human_attribute_name(:password) %></th>
  <td><%= f.password_field :password %></td>
  </tr>
  <tr class="col-mid-3">
  <th><%= f.label User.human_attribute_name(:password_confirmation) %></th>
  <td><%= f.password_field :password_confirmation %></td>
  </tr>
</table>
<%= f.submit %>
<%= link_to t('view.back'), :back %>
<% end %>
