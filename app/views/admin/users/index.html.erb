<h1>ユーザー管理</h1>
  <p class="btn btn-secondary"><%= link_to "ユーザー作成", new_admin_user_path %></p>
  <table class = "table_style">
    <div class = "row">
    <tr　class= "col-mid-12">
      <th><%= User.human_attribute_name(:id) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:admin) %></th>
      <th><%= User.human_attribute_name(:created_at) %></th>
      <th><%= User.human_attribute_name(:updated_at) %></th>
      <th><%= t('view.count') %></th>
      <th></th>
      <th></th>
      <th></th>
      </tr>
    </div>
<% @users.all.includes(:tasks).each do |user| %>
  <div class="row">
    <tr class="col-mid-12">
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin %></td>
      <td><%= user.created_at.strftime("%Y/%m/%d") %></td>
      <td><%= user.updated_at.strftime("%Y/%m/%d") %></td>
      <td><%= link_to user.tasks.count,tasks_path(key: user.id) %></td>
      <td class="btn btn-secondary"><%= link_to t('view.show'),user_path(user.id) %></td>
      <td class="btn btn-secondary"><%= link_to t('view.edit'),edit_admin_user_path(user.id) %></td>
      <td class="btn btn-secondary"><%= link_to t('view.delete'),admin_user_path(user.id),method: :delete %></td>
    </tr>
  </div>
  <% end %>
  </table>
